<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= "http://source.unsplash.com/featured/?houses>&#{rand(1000)}" %>);">
  <h1><%= @flat.name %></h1>
  <div class="container">
    <div class="cards-details">
      <div>
        <div class="card-product">
          <div class="card-product-infos">
            <h2><%= @flat.name %></h2>
            <p><%= @flat.address %></p>
          </div>
        </div>
        <div class="card-product">
          <div class="card-product-infos">
            <h3>A little more about this flat</h3>
            <p><%= @flat.description %></p>
          </div>
        </div>
        <div class="card-product">
          <div class="card-product-infos">
            <h3>Details</h3>
            <p><i class="fa-sharp fa-solid fa-bed"></i> <%= @flat.number_of_guests %> <i class="fa-solid fa-dollar-sign"></i> <%= @flat.price_per_night %></p>
          </div>
        </div>
      </div>
      <div class="cards-bookings">
        <div class="card-product">
          <div class="card-product-infos">
            <h2>Bookings Here</h2>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
